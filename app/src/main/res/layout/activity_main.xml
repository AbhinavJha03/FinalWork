<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"


tools:context=".MainActivity">


<Button
    android:id="@+id/pickState"
    android:layout_width="120dp"
    android:layout_height="45dp"
    android:layout_marginEnd="48dp"
    android:layout_marginBottom="312dp"
    android:text="pickState"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<Button
    android:id="@+id/pick_city"
    android:layout_width="120dp"
    android:layout_height="45dp"
    android:layout_marginStart="132dp"
    android:layout_marginBottom="256dp"
    android:text="pickCity"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<Button
    android:id="@+id/pickCountry"
    android:layout_width="120dp"
    android:layout_height="45dp"
    android:layout_marginStart="28dp"
    android:layout_marginBottom="314dp"
    android:text="pickCountry"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<TextView
    android:id="@+id/countryNameTextView"
    android:layout_width="163dp"
    android:layout_height="20dp"
    android:layout_marginStart="132dp"
    android:layout_marginTop="128dp"
    android:layout_marginEnd="132dp"
    android:textColor="#0A5897"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/countryCodeTextView"
    android:layout_width="163dp"
    android:layout_height="20dp"
    android:layout_marginStart="132dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="116dp"
    android:textColor="#0A5897"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/countryNameTextView" />

<TextView
    android:id="@+id/countryDialCodeTextView"
    android:layout_width="163dp"
    android:layout_height="20dp"
    android:layout_marginStart="132dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="116dp"
    android:textColor="#0A5897"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/countryCodeTextView" />

<TextView
    android:id="@+id/countryCurrencyTextView"
    android:layout_width="163dp"
    android:layout_height="20dp"
    android:layout_marginStart="132dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="116dp"
    android:textColor="#0A5897"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/countryDialCodeTextView" />

<TextView
    android:id="@+id/state_name"
    android:layout_width="163dp"
    android:layout_height="20dp"
    android:layout_marginStart="132dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="116dp"
    android:textColor="#0A5897"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/countryCurrencyTextView" />

<TextView
    android:id="@+id/city_name"
    android:layout_width="163dp"
    android:layout_height="20dp"
    android:layout_marginStart="132dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="116dp"
    android:textColor="#0A5897"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/state_name" />

<ImageView
    android:id="@+id/flag_image"
    android:layout_width="138dp"
    android:layout_height="101dp"
    android:layout_marginStart="102dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@android:drawable/screen_background_light_transparent" />

<TextView
    android:layout_width="227dp"
    android:layout_height="44dp"
    android:layout_marginStart="80dp"
    android:layout_marginBottom="192dp"
    android:text="OR"
    android:textAlignment="center"
    android:textColor="#0A5897"
    android:textSize="30sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<Button
    android:id="@+id/weatherInfoButton"
    android:layout_width="197dp"
    android:layout_height="46dp"
    android:layout_marginStart="107dp"
    android:layout_marginEnd="107dp"
    android:layout_marginBottom="40dp"
    android:onClick="weatherInfo"
    android:text="weather forecast"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<AutoCompleteTextView
    android:id="@+id/editText"
    android:layout_width="305dp"
    android:layout_height="43dp"
    android:layout_marginStart="30dp"
    android:layout_marginBottom="124dp"
    android:alpha=".8"
    android:background="#DACF73"
    android:ems="10"
    android:hint="Enter a city Name...."
    android:inputType="textPersonName"
    android:textColor="#0A5897"
    android:textColorHint="#FFFFFF"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>